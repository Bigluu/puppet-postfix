<% @real_master_settings.each_pair do |service,properties| -%>
<%= properties['srv_name']?properties['srv_name']:service %> <%= properties['srv_type'] %> <%= properties['srv_private']?properties['srv_private']:"-" %> <%= properties['srv_unpriv']?properties['srv_unpriv']:"-" %> <%= properties['srv_chroot']?properties['srv_chroot']:"-" %> <%= properties['srv_wakeup']?properties['srv_wakeup']:"-" %> <%= properties['srv_maxproc']?properties['srv_maxproc']:"-" %> <%= properties['srv_command'] %>
<% if properties['srv_arguments'] -%>
<% properties['srv_arguments'].each do |arg| -%>
  <%= arg %>
<% end -%>
<% end -%>
<% end -%>
